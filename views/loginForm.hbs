<div class="container mt-5 text-dark mb-5">
  <div class="row">
    <form
      class="container col-5 bg-success bg-opacity-25 border border-dark py-4 px-4 col-10 col-md-6 col-lg-6 rounded mb-5 mt-5"
      action="/login"
      method="POST"
    >
      <h2 class="text-dark text-center">Login</h2>

      <div class="mb-3">
        <label for="user" class="form-label">Email</label>
        <input
          name="email"
          type="text"
          class="form-control border border-dark"
          id="email"
          {{! autocomplete="username" }}
        />
      </div>
      <div class="mb-3">
        <label for="pass" class="form-label">Password</label>
        <input
          name="pass"
          type="password"
          class="form-control border border-dark"
          id="pass"
          {{! autocomplete="current-password" }}
        />
      </div>
      {{#if message}}
        <div class="alert alert-danger d-flex align-items-center" role="alert">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            fill="currentColor"
            class="gbi bi-exclamation-triangle-fill flex-shrink-0 me-2"
            viewBox="0 0 16 16"
            role="img"
            aria-label="Warning:"
          >
            <path
              d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"
            ></path>
          </svg>
          <div>
            {{message}}
          </div>
        </div>
      {{/if}}
      <div class="d-flex justify-content-between mt-4">
        {{! <input
          type="submit"
          class="btn btn-success border border-dark"
          value="Tengo una cuenta"
        /> }}
        <button type="submit" class="btn btn-success me-2">Ingresar</button>

        <a href="/register" class="btn btn-danger border ms-2">No tengo una
          cuenta</a>
      </div>
    </form>
  </div>

</div>