<div class="container mt-5 text-dark mb-5">
  <div class="row">
    <form
      class="container col-5 bg-success bg-opacity-25 border border-dark py-3 px-4 col-10 col-md-6 col-lg-6 rounded mb-5 mt-5"
      action="/contacto"
      method="POST"
    >
      <h2 class="text-dark text-center">Contacto</h2>

          <div class="mb-3">
      <label for="name"></label> Nombre</label>
      <input
        type="text"
        name="name"
        id="name"
        class="form-control border border-dark"
        autofocus
        value="{{formData.name}}"
      />
            <div class="badge text-danger input-group text-uppercase">
                  {{#filtro arrWarnings "name"}}
      <p>{{msg}}</p>
    {{/filtro}}
      </div>
          </div>

          <div class="mb-3">
      <label for="lastName"></label> Ingrese apellido</label>
      <input
        type="text"
        name="lastName"
        id="lastName"
        class="form-control border border-dark"
        value="{{formData.lastName}}"
      />
            <div class="badge text-danger input-group text-uppercase">
                  {{#filtro arrWarnings "lastName"}}
      <p>{{msg}}</p>
    {{/filtro}}
      </div>
          </div>

          <div class="mb-3">
      <label for="email"></label> Ingrese mail</label>
      <input
        type="text"
        name="email"
        id="email"
        class="form-control border border-dark"
        value="{{formData.email}}"
      />
      <div class="badge text-danger input-group text-uppercase">
                  {{#filtro arrWarnings "email"}}
      <p>{{msg}}</p>
      </div>
    {{/filtro}}
          </div>

          <div class="mb-3">
      <label for="message"></label>Ingrese mensaje</label>
      <textarea
        name="message"
        id="message"
        cols="30"
        rows="10"
        class="form-control border border-dark"
      >{{formData.message}}</textarea>
          <div>
      <div class="badge text-danger input-group text-uppercase">
                  {{#filtro arrWarnings "message"}}
      </div>
      <p>{{msg}}</p>
    {{/filtro}}
      <input type="submit" value="Enviar" class="btn btn-success mt-4 btn-lg"  />
          </div>
          </div>
  </form>
  </div>
</div> 
